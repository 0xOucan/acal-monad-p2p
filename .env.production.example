# ACAL Production Environment Variables
# Copy this file to .env.production and fill in the values

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Next.js)
# ============================================================================

# Envio GraphQL endpoint for production
NEXT_PUBLIC_ENVIO_PRODUCTION_URL=https://your-envio-instance.herokuapp.com/v1/graphql

# Alternative: if using Railway
# NEXT_PUBLIC_ENVIO_PRODUCTION_URL=https://your-envio-railway.up.railway.app/v1/graphql

# Alternative: if using self-hosted
# NEXT_PUBLIC_ENVIO_PRODUCTION_URL=https://your-domain.com:8080/v1/graphql

# Arbitro server private key (for automated dispute resolution)
ARBITRO_PRIVATE_KEY=0x1234567890abcdef...

# Optional: Alchemy API key for enhanced RPC performance
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# Optional: Custom RPC endpoint override
NEXT_PUBLIC_RPC_URL=https://testnet-rpc.monad.xyz

# ============================================================================
# ENVIO INDEXER ENVIRONMENT VARIABLES
# ============================================================================

# Production mode
NODE_ENV=production

# PostgreSQL connection (provided by cloud provider)
POSTGRES_URL=postgresql://username:password@host:port/database

# Alternative format for some providers
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=envio_production
# POSTGRES_USER=envio
# POSTGRES_PASSWORD=secure_password

# Monad Testnet RPC (primary)
ENVIO_RPC_URL=https://testnet-rpc.monad.xyz

# Optional: Fallback RPC endpoints
# ENVIO_RPC_FALLBACK_1=https://rpc-testnet.monad.xyz
# ENVIO_RPC_FALLBACK_2=https://another-monad-rpc.com

# ============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# ============================================================================

# Heroku (if using Heroku for Envio deployment)
HEROKU_APP_NAME=acal-envio-indexer

# Railway (if using Railway for Envio deployment)
RAILWAY_PROJECT_ID=your-project-id

# Vercel (for frontend deployment)
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# ============================================================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# LogRocket app ID for user session recording
# LOGROCKET_APP_ID=your-logrocket-id

# Mixpanel token for analytics
# MIXPANEL_TOKEN=your-mixpanel-token